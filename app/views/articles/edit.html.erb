<%= turbo_frame_tag "modal_edicao" do %>
  
  <dialog id="modal_editar_artigo" class="m-auto relative sm:my-8 w-full sm:max-w-2xl max-h-[90vh] overflow-hidden rounded-xl shadow-2xl backdrop:bg-gray-900/50 open:flex open:flex-col">
      
      <header class="bg-gray-50 px-6 py-4 border-b border-gray-100 flex justify-between items-center shrink-0 z-10">
          <h2 class="font-bold text-lg text-gray-800">Editar Artigo</h2>
          
          <%= link_to articles_path, class: "text-gray-400 hover:text-gray-600 font-bold text-2xl leading-none w-8 h-8 flex items-center justify-center rounded-full hover:bg-gray-200 transition" do %>
            &times;
          <% end %>
      </header>

      <%= render 'form', article: @article %>

  </dialog>

  <script>
    document.getElementById("modal_editar_artigo").showModal();
  </script>

<% end %>