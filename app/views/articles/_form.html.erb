<%= form_with(model: article, data: { turbo_frame: "_top" }, class: "grid grid-cols-1 flex-1 p-6 gap-6 overflow-y-auto") do |form| %>
    <div>
        <%= form.label :title, "Título do Artigo"%>
        <%= form.text_field :title, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition"%>
    </div>
    <div>
        <%= form.label :author, "Autor"%>
        <%= form.text_field :author, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition" %>
    </div>
    <div>
        <%= form.label :published_at, "Data da Publicação"%>
        <%= form.date_field :published_at, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition" %>
    </div>

    <div>
        <%= form.label :area, "Área de Estudo", class: "block text-sm font-medium text-gray-700" %>
        <%= form.select :area, 
            [['Medicina', 'medicine'], ['Tecnologia', 'technology'], ['Meio ambiente', 'environment'], ['Astronomia', 'astronomy']], 
            { prompt: "Selecione..." }, 
            { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 p-2 border bg-white" } 
        %>
    </div>

    <div>
        <%= form.label :status, "Status"%>
        <%= form.select :status, [['Postado', 'posted'], ['Rascunho','draft']], {prompt: "Escolha uma área"}, { class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition" }%>
    </div>
    <div>
        <%= form.label :abstract, "Resumo"%>
        <%= form.text_area :abstract, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary outline-none transition resize-none" %>
    </div>
    <div class="bg-gray-50 px-6 py-4 flex flex-row-reverse gap-3 border-t border-gray-100 flex-shrink-0">
        <button type="button" class="w-full inline-flex justify-center rounded-lg border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none sm:w-auto sm:text-sm">Cancelar</button>
        <button type="submit" class="w-full inline-flex justify-center rounded-lg border border-transparent shadow-sm px-4 py-2 bg-primary text-base font-medium text-white hover:bg-blue-700 focus:outline-none sm:w-auto sm:text-sm">Salvar</button>
    </div>
<% end %>