<dialog id="modal_novo_artigo" class="m-auto relative sm:my-8 w-full sm:max-w-2xl max-h-[90vh] open:flex open:flex-col overflow-hidden rounded-xl shadow-2xl backdrop:bg-gray-900/50">
    
    <header class="bg-gray-50 px-6 py-4 border-b border-gray-100 flex justify-between items-center shrink-0 z-10">
        <h2 class="font-bold text-lg text-gray-800">Novo Artigo</h2>
        
        <form method="dialog">
            <button class="text-gray-400 hover:text-gray-600 font-bold text-2xl leading-none w-8 h-8 flex items-center justify-center rounded-full hover:bg-gray-200 transition">
                &times;
            </button>
        </form>
    </header>

    <%= render 'form', article: @new_article %>

</dialog>

<section>
    <div class="mb-8 flex flex-col md:flex-row md:justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-gray-800">Gerenciar Artigos</h1>
            <p class="text-gray-500 text-sm">Crie, edite ou remova publicações do portal.</p>
        </div>
        <button class=" bg-primary hover:bg-blue-700 text-white rounded-lg font-medium w-full md:w-auto px-4 py-2" onclick="document.getElementById('modal_novo_artigo').showModal()"><i class="fa-solid fa-plus"></i>Novo Artigo</button>
    </div>
    <div>
        <% @articles.each do |article| %>
            <article class="card--admin">
                <div class="flex justify-between">
                    <p><%=article.area %></p>
                    <% if article.status == "posted"%>
                        <p class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800"><%= article.status %></p>
                    <% else %>
                        <p class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800"><%= article.status %></p>
                    <% end %>
                </div>
                <h3><%=article.title %></h3>
                <div><i class="fa-regular fa-user"></i><%=article.author %></div>
                <div><i class="fa-regular fa-calendar"></i><%=article.published_at %></div>
                <div class="grid grid-cols-2 gap-3 pt-4 border-t border-gray-100">
                    <button class="py-2 rounded-lg border border-gray-200 text-gray-700 font-medium hover:bg-gray-50 active:bg-gray-100 transition">Editar</button>
                    <%= link_to "Excluir", article_path(article), data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" }, class: "flex justify-center items-center py-2 rounded-lg border border-red-100 text-red-600 font-medium hover:bg-red-50 active:bg-red-100 transition"%>                </div>
            </article>
        <% end %>
    </div>
</section>

