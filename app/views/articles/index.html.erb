<%= turbo_frame_tag "modal_edicao" %>

<section>
    <div class="mb-8 flex flex-col md:flex-row md:justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-gray-800">Gerenciar Artigos</h1>
            <p class="text-gray-500 text-sm">Crie, edite ou remova publicações do portal.</p>
        </div>
        <%= link_to "Novo Artigo", new_article_path, class: "flex items-center bg-primary hover:bg-blue-700 text-white rounded-lg font-medium w-full md:w-auto px-4 py-2", data: { turbo_frame: "modal_edicao" } %>
    </div>
    <div class="flex flex-col gap-2">
        <% @articles.each do |article| %>
            <article class="card--admin">
                <div class="flex justify-between">
                    <p><%=article.area %></p>
                    <% if article.status == "posted"%>
                        <p class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800"><%= article.status %></p>
                    <% else %>
                        <p class="inline-fleEste estudo explora as aplicações emergentes de IA no diagnóstico
                    médico e tratamento personalizado.x items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800"><%= article.status %></p>
                    <% end %>
                </div>
                <h3><%= article.title %></h3>
                <div><i class="fa-regular fa-user"></i><%=article.author %></div>
                <div><i class="fa-regular fa-calendar"></i><%=article.published_at %></div>
                <div class="grid grid-cols-2 gap-3 pt-4 border-t border-gray-100">
                    <%= link_to "Editar", edit_article_path(article), data: { turbo_frame: "modal_edicao" }, class: "flex justify-center py-2 rounded-lg border border-gray-200 text-gray-700 font-medium hover:bg-gray-50 active:bg-gray-100 transition" %>
                    <%= link_to "Excluir", article_path(article), data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" }, class: "flex justify-center items-center py-2 rounded-lg border border-red-100 text-red-600 font-medium hover:bg-red-50 active:bg-red-100 transition"%>                </div>
            </article>
        <% end %>
    </div>
</section>

