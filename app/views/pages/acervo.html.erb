<section class="mb-10 text-center md:text-left border-b border-gray-200 pb-8">
    <div>
        <h1 class="text-3xl md:text-4xl font-bold text-secondary mb-3">Acervo Científico</h1>
        <p class="text-gray-600 max-w-2xl">Explore nossas biblioteca completa de publicações, testes e artigos revisados por pares.</p>
    </div>

    <hr>

    <div
        class="grid grid-cols-2 bg-white p-4 rounded-xl shadow-sm border border-gray-100 mb-8 gap-4 items-center justify-between">
        <input type="text"
            class="col-span-2 pl-10 pr-4 py-2.5 bg-gray-50 border border-gray-200 rounded-lg focus:ring-2 focus:ring-primary focus:bg-white outline-none transition"
            placeholder="Buscar por títulos e autor">
        <select>
            <option value="">Todas as Áreas</option>
            <option value="medicine">Medicina</option>
            <option value="technology">Tecnologia</option>
            <option value="astronomy">Astronomia</option>
            <option value="environment">Meio Ambiente</option>
        </select>

        <select name="" id="">
            <option value="">Mais recentes</option>
            <option value="">Mais antigos</option>
            <option value="">A - Z</option>
        </select>
    </div>
</section>

<section>
    <% @articles.each do |article|%>
        <% if article.status == "posted" %>
            <article class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden hover:shadow-md transition flex flex-col h-full group">
                <div class="p-6 flex-grow">
                    <div class="flex justify-between items-center mb-4">
                        <span
                            class="bg-blue-100 text-primary text-xs px-3 py-1 rounded-full font-bold uppercase"><%= article.area %></span>
                        <span class="text-gray-400 text-sm"><%= article.published_at %></span>
                    </div>
                    <h3 class="text-xl font-bold text-secondary mb-2 group-hover:text-primary transition"><%= article.title %></h3>
                    <p class="text-gray-500 text-sm mb-4 italic"><%= article.author %></p>
                    <p class="text-gray-600 line-clamp-3"><%= article.abstract %></p>
                </div>
                <div class="px-6 pb-6 mt-auto">
                    <button
                        class="w-full py-2.5 border border-gray-200 text-gray-700 font-medium rounded-lg hover:bg-gray-50 hover:border-gray-300 transition flex items-center justify-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-gray-400" fill="none"
                            viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                        </svg>
                        Baixar PDF
                    </button>
                </div>
            </article>
        <% end %>
    <% end %>

</section>